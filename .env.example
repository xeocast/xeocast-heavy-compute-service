# API Bearer Token
BEARER_TOKEN="your_secret_bearer_token_here"

# Gemini API Key
GEMINI_API_KEY="your_gemini_api_key_here"

# --- Cloudflare R2 Settings ---

# These are required if you use R2 for storing client secrets or other files.
R2_ENDPOINT_URL=https://your_r2_endpoint_url_here.r2.cloudflarestorage.com

# Read-Only Credentials
R2_RO_ACCESS_KEY_ID=your_r2_ro_access_key_id_here
R2_RO_SECRET_ACCESS_KEY=your_r2_ro_secret_access_key_here

# Read-Write Credentials
R2_RW_ACCESS_KEY_ID=your_r2_rw_access_key_id_here
R2_RW_SECRET_ACCESS_KEY=your_r2_rw_secret_access_key_here

# Bucket Names (defaults are usually fine, set in settings.py based on APP_ENV)
R2_DEFAULT_FILES_BUCKET=default-files
R2_EPISODE_PROJECTS_BUCKET=episode-projects